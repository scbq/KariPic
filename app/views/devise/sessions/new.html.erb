<div class="d-flex align-items-center justify-content-center vh-100" style="background-image: url('<%= asset_path('background_image.jpg') %>'); background-size: cover;">
  <div class="card p-4 shadow" style="width: 400px; background-color: rgba(255, 255, 255, 0.8); border-radius: 15px;">
    <h2 class="text-center mb-4">Iniciar Sesión</h2>

    <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), html: { class: "form" }) do |f| %>
      <div class="mb-3">
        <%= f.label :email, "Correo Electrónico", class: "form-label" %>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, "Contraseña", class: "form-label" %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="mb-3 form-check">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, "Recuérdame", class: "form-check-label" %>
      </div>

      <%= f.submit "Iniciar Sesión", class: "btn btn-primary w-100" %>
    <% end %>

    <div class="text-center mt-3">
      <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name), class: "text-muted d-block" %>
      <%= link_to "Regístrate", new_registration_path(resource_name), class: "text-muted d-block mt-2" %>
    </div>
  </div>
</div>
